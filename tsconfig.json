{
    "compilerOptions": {
        "alwaysStrict": true,
        "baseUrl": "src",
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "lib": ["ESNext"],
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "dist",
        "rootDir": "src",
        "sourceMap": true,
        "target": "ES2019",
    },
    "paths": {
        "@controllers/*": [
          "src/controllers/*"
        ],
        "@interfaces/*": [
          "src/interfaces/*"
        ],
        "@middleware/*": [
          "src/middleware/*"
        ],
        "@graphql/*": [
            "src/graphql/*"
        ],
        "@connectors/*": [
          "src/connectors/*"
        ]
      },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "public",
        "dist",
    ],
}
