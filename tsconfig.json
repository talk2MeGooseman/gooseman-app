{
    "compilerOptions": {
        "sourceMap": true,
        "target": "es6",
        "module": "commonjs",
        "outDir": "./dist",
        "baseUrl": "./src",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "importHelpers": true
    },
    "paths": {
        "@controllers/*": [
          "src/controllers/*"
        ],
        "@interfaces/*": [
          "src/interfaces/*"
        ],
        "@middleware/*": [
          "src/middleware/*"
        ]
      },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "public"
    ]
}
